# Nginx Logrotate Configuration Environment Variables
# Copy this file to .env and customize as needed

# Enable/disable logrotate functionality
ENABLE_LOGROTATE=true

# Logrotate method: supervisord, daemon, cron, disabled
LOGROTATE_METHOD=supervisord

# Logrotate frequency: daily, weekly, monthly
LOGROTATE_FREQUENCY=daily

# Number of rotated log files to keep
LOGROTATE_KEEP_DAYS=30

# Compression settings
LOGROTATE_COMPRESS=compress
LOGROTATE_COMPRESS_ARCHIVE=true

# Logrotate behavior
LOGROTATE_MISSINGOK=missingok
LOGROTATE_NOTIFEMPTY=notifempty

# Archive configuration
LOGROTATE_ENABLE_ARCHIVE=true
LOGROTATE_ARCHIVE_DIR=/var/log/nginx/archive

# Remote transfer configuration
LOGROTATE_ENABLE_REMOTE=false
LOGROTATE_REMOTE_METHOD=scp  # scp, sftp, rsync, s3

# SCP/SFTP/RSYNC configuration
# Use "sftp" method for SFTP-only servers (Hetzner Storage Box, etc.)
# Uses sftp batch mode â€” no shell access required
LOGROTATE_REMOTE_HOST=your-remote-server.com
LOGROTATE_REMOTE_USER=nginx-logs
LOGROTATE_REMOTE_PATH=/var/log/nginx-archive
LOGROTATE_SSH_KEY_PATH=/root/.ssh/id_rsa
LOGROTATE_SSH_PORT=22

# S3 configuration (if using S3)
LOGROTATE_AWS_ACCESS_KEY_ID=your-access-key
LOGROTATE_AWS_SECRET_ACCESS_KEY=your-secret-key
LOGROTATE_AWS_DEFAULT_REGION=us-east-1
LOGROTATE_S3_BUCKET=your-nginx-logs-bucket
LOGROTATE_S3_PREFIX=nginx-logs

# Cleanup settings
LOGROTATE_CLEANUP_AFTER_REMOTE=false
